        "pypa",
        "pypackages",
        "pyparsing",
        "pypirc",
        "pyproject",
        "pyrsistent",
        "pyserial",
        "pytest",
        "PYTHONPATH",
        "pytype",
        "pytz",
        "Referer",
        "restfulclient",
        "ropeproject",
        "Scrapy",
        "sdist",
        "setuptools",
        "soupsieve",
        "Spyder",
        "spyderproject",
        "spyproject",
        "ufeff",
        "unittests",
        "urllib",
        "venv",
        "virtualenv",
        "wadllib",
        "webassets",
        "zope"
